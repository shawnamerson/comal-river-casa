generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

// ============================================
// AUTHENTICATION & USER MANAGEMENT
// ============================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?   // For credentials provider
  role          UserRole  @default(GUEST)

  accounts      Account[]
  sessions      Session[]
  bookings      Booking[]
  reviews       Review[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([email])
}

enum UserRole {
  GUEST
  ADMIN
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// PROPERTY SETTINGS (singleton, id = "default")
// ============================================

model PropertySettings {
  id          String   @id @default("default")
  basePrice   Decimal  @db.Decimal(10, 2)
  cleaningFee Decimal  @db.Decimal(10, 2)
  minNights   Int
  maxNights   Int
  updatedAt   DateTime @updatedAt
}

// ============================================
// AVAILABILITY MANAGEMENT
// ============================================

model BlockedDate {
  id                  String   @id @default(cuid())
  startDate           DateTime
  endDate             DateTime
  reason              String?
  externalCalendarId  String?  // If synced from external calendar
  externalEventId     String?  // Event ID from external calendar for updates

  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@index([startDate, endDate])
  @@index([externalCalendarId])
}

model DateRateOverride {
  id            String   @id @default(cuid())
  date          DateTime @unique
  pricePerNight Decimal? @db.Decimal(10, 2)
  minNights     Int?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model ExternalCalendar {
  id          String   @id @default(cuid())
  name        String   // e.g., "Airbnb", "Vrbo"
  platform    String   // "AIRBNB", "VRBO", "BOOKING_COM", "OTHER"
  icalUrl     String   @db.Text
  isActive    Boolean  @default(true)
  lastSyncAt  DateTime?
  lastSyncStatus String? // "SUCCESS", "FAILED"
  lastSyncError String? @db.Text

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([platform])
  @@index([isActive])
}

// ============================================
// TAX RATES
// ============================================

model TaxRate {
  id        String   @id @default(cuid())
  name      String   // e.g. "State Hotel Tax", "County Lodging Tax"
  rate      Decimal  @db.Decimal(5, 4) // Percentage as decimal (0.06 = 6%)
  isActive  Boolean  @default(true)
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ============================================
// BOOKING MANAGEMENT
// ============================================

model Booking {
  id              String        @id @default(cuid())
  userId          String

  // Dates
  checkIn         DateTime
  checkOut        DateTime

  // Guest info
  numberOfGuests  Int
  guestName       String
  guestEmail      String
  guestPhone      String?

  // Pricing breakdown
  numberOfNights  Int
  pricePerNight   Decimal       @db.Decimal(10, 2)
  subtotal        Decimal       @db.Decimal(10, 2)
  cleaningFee     Decimal       @db.Decimal(10, 2)
  serviceFee      Decimal       @db.Decimal(10, 2)
  taxBreakdown    Json?         // Snapshot: [{ name, rate, amount }]
  taxTotal        Decimal?      @db.Decimal(10, 2)
  totalPrice      Decimal       @db.Decimal(10, 2)

  // Payment
  stripePaymentIntentId String? @unique
  stripeSessionId       String? @unique
  stripeCustomerId      String?
  paymentStatus   PaymentStatus @default(PENDING)

  // Booking status
  status          BookingStatus @default(PENDING)

  // Special requests
  specialRequests String?       @db.Text

  // Relations
  user            User            @relation(fields: [userId], references: [id])
  review          Review?
  damageCharges   DamageCharge[]

  // Cancellation
  cancelledAt     DateTime?
  cancellationReason String?    @db.Text
  refundAmount    Decimal?      @db.Decimal(10, 2)

  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([userId])
  @@index([checkIn, checkOut])
  @@index([status])
  @@index([paymentStatus])
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

enum PaymentStatus {
  PENDING
  PROCESSING
  SUCCEEDED
  FAILED
  REFUNDED
  PARTIALLY_REFUNDED
}

enum DamageChargeStatus {
  PENDING
  SUCCEEDED
  FAILED
}

// ============================================
// DAMAGE CHARGES
// ============================================

model DamageCharge {
  id                    String             @id @default(cuid())
  bookingId             String
  amount                Decimal            @db.Decimal(10, 2)
  description           String             @db.Text
  stripePaymentIntentId String             @unique
  status                DamageChargeStatus @default(PENDING)
  booking               Booking            @relation(fields: [bookingId], references: [id])
  createdAt             DateTime           @default(now())
  updatedAt             DateTime           @updatedAt

  @@index([bookingId])
}

// ============================================
// REVIEW SYSTEM
// ============================================

model Review {
  id        String  @id @default(cuid())
  bookingId String? @unique
  userId    String?

  rating    Int            // 1-5 stars
  comment   String? @db.Text
  guestName String         // Always present (from booking or manual entry)
  source    String @default("DIRECT")  // "DIRECT", "AIRBNB", "VRBO"

  hostResponse     String?   @db.Text
  hostResponseDate DateTime?
  isPublished      Boolean   @default(false)

  booking  Booking? @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  user     User?    @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([isPublished])
}
